<div class="flex flex-wrap mt-6 relative">
  <%- if controller_name != 'sessions' %>
  <div class="w-1/2">
    <%= link_to "Log in", new_session_path(resource_name), class: "text-gray-300"  %>
  </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="w-1/2">
    <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-gray-300" %>
  </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="w-1/2 text-right">
    <%= link_to "Create new account", new_registration_path(resource_name), class: "text-gray-300" %>
  </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="w-1/2 text-right">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-300" %>
  </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="w-1/2 text-right">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-gray-300" %>
  </div>
  </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
  <div class="w-1/2">
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "text-gray-300" %>
  </div>
    <% end %>
  <% end %>
</div>