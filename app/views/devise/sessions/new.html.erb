<div class="container mx-auto px-4 h-full">
  <div class="flex content-center items-center justify-center h-full">
    <div class="w-full lg:w-4/12 px-4">
      <div
        class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300 border-0"
      >
        <div class="rounded-t mb-0 px-6 py-6">
          <div class="text-center mb-3">
            <h6 class="text-gray-600 text-sm font-bold">
              Sign in
            </h6>
          </div>
        </div>
        <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="relative w-full mb-3">
            <%= f.label :email, class: "block uppercase text-gray-700 text-xs font-bold mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full ease-linear transition-all duration-150" %>
          </div>

          <div class="relative w-full mb-3">
            <%= f.label :password, class: "block uppercase text-gray-700 text-xs font-bold mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password", 
              class: "px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full ease-linear transition-all duration-150" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div>
              <%= f.label :remember_me, class: "inline-flex items-center cursor-pointer" do %>
                <%= f.check_box :remember_me, class: "form-checkbox text-gray-800 ml-1 w-5 h-5 ease-linear transition-all duration-150" %>
                <span class="ml-2 text-sm font-semibold text-gray-700">
                  Remember me
                </span>
              <% end %>
            </div>
          <% end %>


          <div class="text-center mt-6">
            <%= f.button "Sign In",
              class: "bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150" %>
          </div>
          <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>